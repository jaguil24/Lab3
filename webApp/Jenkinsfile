pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = 'docker-hub-creds' // Your Docker Hub credentials ID
        DOCKER_IMAGE_NAME = 'your-dockerhub-username/comp367-webapp' // Replace with your Docker Hub username and image name
        DOCKER_IMAGE_TAG = "${BUILD_NUMBER}" // Use Jenkins build number as tag
    }

    stages {
        stage('Checkout') {
            steps {
                git 'YOUR_GIT_REPOSITORY_URL' // Replace with your Git repository URL
            }
        }

        stage('Build Maven Project') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Docker Login') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_HUB_CREDENTIALS) {
                        echo "Successfully logged in to Docker Hub"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} ."
                }
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    bat "docker push ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}"
                }
            }
        }
    }
}

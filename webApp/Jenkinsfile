pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat 'docker build -t your-image-name:latest .'
                }
            }
        }

        stage('Deploy') {
            steps {
                bat 'echo Deploying the project'
            }
        }
    }
}
